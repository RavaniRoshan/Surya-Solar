# Environment
ENVIRONMENT=development

# Database Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key
DATABASE_URL=postgresql://user:password@localhost:5432/solar_weather

# Authentication
JWT_SECRET=your_jwt_secret_key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
APP_NAME=ZERO-COMP Solar Weather API
APP_VERSION=1.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=http://localhost:3000,https://zero-comp.vercel.app

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# ML Model Configuration
HUGGINGFACE_TOKEN=your_huggingface_token
MODEL_NAME=surya-1.0
MODEL_CACHE_DIR=./model_cache
INFERENCE_TIMEOUT_SECONDS=30
PREDICTION_INTERVAL_MINUTES=10

# External Services
NASA_API_KEY=your_nasa_api_key
NASA_BASE_URL=https://api.nasa.gov

# Razorpay (Payment Processing)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=